<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CouponDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgVoucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_starbucks"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/white"
            android:onClick="btnBack"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:layout_marginTop="-80dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/txtHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enjoy an 100 AED voucher on Starbucks"
                        android:fontFamily="@font/calbri_bold"
                        android:textSize="30dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/txtPointOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. This voucher is worth 100 points."
                        android:textSize="18dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/calibri_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Minimum spend of AED 10."
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/calibri_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Offer applicable both online and in store."
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/calibri_regular"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btnGetCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GET CODE"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="60dp"
                        android:backgroundTint="#4289DE"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>