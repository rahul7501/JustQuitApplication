<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3ffff"
    android:orientation="vertical"
    tools:context=".ExerciseActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_margin="10dp"
        android:onClick="btnBack"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_exercise_design"/>

            <TextView
                android:id="@+id/distraction_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Walk around for 10 seconds"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:fontFamily="@font/calbri_bold" />

            <!--            <ImageView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:src="@drawable/ic_exercise"-->
            <!--                android:layout_marginTop="25dp"/>-->

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="376dp"
                android:layout_height="346dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/walking" />

            <TextView
                android:id="@+id/txtCountdownTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:10"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="58sp"
                android:fontFamily="@font/calbri_bold"
                android:layout_marginTop="5dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:paddingVertical="20dp"
                android:paddingHorizontal="60dp"
                android:backgroundTint="#2BB914"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>